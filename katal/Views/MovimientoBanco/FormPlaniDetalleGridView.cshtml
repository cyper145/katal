
@Html.DevExpress().GridView(t =>
{
    t.Name = "gvPlanillaDetalle";
    t.CallbackRouteValues = new { Controller = "MovimientoBanco", Action = "FormPlaniDetalleGridView" };
    t.CustomActionRouteValues = new { Controller = "MovimientoBanco", Action = "GridViewCustomActionPartial" };
    t.SettingsEditing.AddNewRowRouteValues = new { Controller = "MovimientoBanco", Action = "RequisicionAddNewPartial" };
    t.SettingsEditing.UpdateRowRouteValues = new { Controller = "MovimientoBanco", Action = "RequisicionUpdatePartial" };
