    t.KeyFieldName = "DetKey";
    t.Width = Unit.Percentage(100);
    t.Height = Unit.Percentage(20);
    t.EnableRowsCache = true;


    t.EnablePagingGestures = AutoBoolean.False;

    t.ControlStyle.CssClass = "grid-view";
    //settings.Enabled = false;

    t.Styles.Cell.Wrap = DefaultBoolean.False;
    t.Styles.PagerBottomPanel.CssClass = "pager";
    t.Styles.FocusedRow.CssClass = "focused";

    t.SettingsBehavior.AllowFocusedRow = true;
    //    gridViewSettings.SettingsBehavior.AllowSelectByRowClick = true;
